{
    "require": {},
    "require-dev": {
        "mockery/mockery": "^1.2",
        "php-mock/php-mock-mockery": "^1.3",
        "phpunit/phpunit": "^8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "application/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": [
            "phpcs -p -s",
            "phpunit"
        ],
        "fix": [
            "phpcbf"
        ]
    }

}
